Question 1:

#include<stdio.h>
#include<string.h>
int main()
{
	char str1[100],str2[50];
	int i,j=0,first=0;
	scanf("%c",str1);
	for(i=0;i<strlen(str1);i++)
	{
		str2[first]=str1[j];
		if(str2[i]==' ')
		{
			first=first+1;
			j=i;
			str2[first]=str1[j];
			j++;
		}
	}
	str2[first+1]='\0';
	printf("%s",str2);
	return 0;
}
